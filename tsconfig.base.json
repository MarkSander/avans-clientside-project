{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@avans-nx-project/backend/dto": ["libs/backend/dto/src/index.ts"],
      "@avans-nx-project/backend/features": [
        "libs/backend/features/src/index.ts"
      ],
      "@avans-nx-project/backend/user": ["libs/backend/user/src/index.ts"],
      "@avans-nx-project/mtg-cards/common": [
        "libs/mtg-cards/common/src/index.ts"
      ],
      "@avans-nx-project/mtg-cards/features": [
        "libs/mtg-cards/features/src/index.ts"
      ],
      "@avans-nx-project/ui": ["libs/mtg-cards/ui/src/index.ts"],
      "@avans-nx-workshop/mtg-cards/alert": [
        "libs/mtg-cards/alert/src/index.ts"
      ],
      "@avans-nx-workshop/shared/api": ["libs/shared/api/src/index.ts"],
      "@avans-nx-project/mtg-cards/user-auth": [
        "libs/mtg-cards/user-auth/index.ts"
      ]

    }
  },
  "exclude": ["node_modules", "tmp"]
}
